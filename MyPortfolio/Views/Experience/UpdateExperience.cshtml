@model Experience
@{
ViewData["Title"] = "CreateExperience";
Layout = "/Views/Layout/index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Deneyim Güncelle</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ExperienceId">
                            <label>Firma</label>
                            <input type="text" asp-for="Head" class="form-control">
                            <br>
                            <label>Çalışan Pozisyon</label>
                            <input type="text" asp-for="Title" class="form-control">
                            <br>
                            <label>Tarih Aralığı</label>
                            <input type="text" asp-for="Date" class="form-control">
                            <br>
                            <label>Açıklama</label>
                            <textarea rows="3" class="form-control" asp-for="Description"></textarea>
                            <br>
                            <button class="btn btn-success">Deneyimi Ekle</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>